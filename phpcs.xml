<?xml version="1.0"?>
<ruleset name="WP GitHub Release Updater">
    <description>Custom coding standards for WP GitHub Release Updater</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Exclude the inline comment punctuation rule -->
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar"/>

        <!-- Allow camelCase method names instead of snake_case -->
        <exclude name="WordPress.NamingConventions.ValidFunctionName.MethodNameInvalid"/>

        <!-- Allow camelCase global function names instead of snake_case -->
        <exclude name="WordPress.NamingConventions.ValidFunctionName.FunctionNameInvalid"/>

        <!-- Allow docblock comments without ending punctuation -->
        <exclude name="Squiz.Commenting.FunctionComment.ParamCommentFullStop"/>
    </rule>
</ruleset>
